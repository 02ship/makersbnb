<html>
<head>
<style>
* {font: 20px Verdana}
h1 {
  margin-top: 15%;
  text-align: center;
  color: black;
  font-size: 36px;
}
ul {
  width: 80%;
  margin: auto;
  text-align: center;
  color: black;
  border: 3px solid black;
  padding-top: 2%;
  padding-bottom: 2%;
  padding-left: 2%;
  padding-right: 2%;
}

p {
  width: 80%;
  margin: auto;
  color: black;
  border: 3px solid black;
  padding-top: 2%;
  padding-bottom: 2%;
  padding-left: 2%;
  padding-right: 2%;
  margin-bottom: 2%;
  text-overflow: ellipsis;
  overflow: hidden;
}
body {
  margin: 0;
}
      /* Add a black background color to the top navigation */
  .topnav {
    background-color: #333;
    overflow: hidden;
    width: 100%
  }

  /* Style the links inside the navigation bar */
  .topnav a {
    float: left;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
  }

  /* Change the color of links on hover */
  .topnav a:hover {
    background-color: #ddd;
    color: black;
  }

  /* Add a color to the active/current link */
  .topnav a.active {
    background-color: #333;
    color: white;
  }
</style>
</head>

<header>
  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/spaces">Spaces</a>
    <a href="/users/new">Sign up</a>
    <a href="/sessions/new">Sign in</a>
    <a href="/sessions/destroy">Sign out</a>
  </div>
</header>

  <h1> Spaces: </h1>
<ul>
    <% @spaces.each do |space| %>

        <p>
        <%= space.name %>
        <br>
        <%= space.description %>

        </p>

    <% end %>
    </ul>
